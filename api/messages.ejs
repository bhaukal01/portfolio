<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact Messages</title>
    <style>
        :root {
            --b: #e5e7eb;
            --fg: #0f172a;
            --muted: #475569;
        }

        body {
            font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto;
            margin: 24px;
            color: var(--fg);
        }

        h1 {
            margin: 0 0 16px 0;
        }

        .pill {
            display: inline-block;
            border: 1px solid var(--b);
            padding: 2px 8px;
            border-radius: 999px;
            font-size: 12px;
            color: var(--muted);
        }

        .card {
            border: 1px solid var(--b);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 12px;
        }

        .row {
            display: flex;
            gap: 12px;
            align-items: baseline;
        }

        .k {
            width: 100px;
            color: var(--muted);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: .04em;
        }

        .v {
            font-size: 14px;
        }

        .empty {
            color: var(--muted);
        }

        pre {
            white-space: pre-wrap;
            margin: 0;
        }
    </style>
</head>

<body>
    <h1>Contact Messages <span class="pill">
            <%= messages.length %>
        </span></h1>

    <% if (!messages.length) { %>
        <p class="empty">No messages yet.</p>
        <% } %>

            <% messages.slice().reverse().forEach((m)=> { %>
                <div class="card">
                    <div class="row">
                        <div class="k">When</div>
                        <div class="v">
                            <%= new Date(m.date).toLocaleString() %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">Name</div>
                        <div class="v">
                            <%= m.name %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">Email</div>
                        <div class="v">
                            <%= m.email %>
                        </div>
                    </div>
                    <% if (m.phone) { %>
                        <div class="row">
                            <div class="k">Phone</div>
                            <div class="v">
                                <%= m.phone %>
                            </div>
                        </div>
                        <% } %>
                            <div class="row">
                                <div class="k">Message</div>
                                <div class="v">
                                    <pre><%= m.message %></pre>
                                </div>
                            </div>
                            <div class="row">
                                <div class="k">ID</div>
                                <div class="v">
                                    <%= m.id %>
                                </div>
                            </div>
                </div>
                <% }) %>
</body>

</html>