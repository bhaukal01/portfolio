<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact Messages</title>
    <style>
        body {
            font-family: sans-serif;
            margin: 24px;
            color: #0f172a;
        }

        h1 {
            margin-bottom: 16px;
        }

        .pill {
            border: 1px solid #e5e7eb;
            padding: 2px 8px;
            border-radius: 999px;
            font-size: 12px;
            color: #475569;
        }

        .card {
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 12px;
        }

        .row {
            display: flex;
            gap: 12px;
            align-items: baseline;
        }

        .k {
            width: 100px;
            color: #475569;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: .04em;
        }

        .v {
            font-size: 14px;
        }

        pre {
            white-space: pre-wrap;
            margin: 0;
        }

        .delete-btn {
            background: #ef4444;
            color: white;
            padding: 4px 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>Contact Messages <span class="pill">
            <%= messages.length %>
        </span></h1>

    <% if (!messages.length) { %>
        <p style="color:#475569;">No messages yet.</p>
        <% } %>

            <% messages.forEach((m)=> { %>
                <div class="card">
                    <div class="row">
                        <div class="k">When</div>
                        <div class="v">
                            <%= new Date(m.date).toLocaleString() %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">Name</div>
                        <div class="v">
                            <%= m.name %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">Email</div>
                        <div class="v">
                            <%= m.email %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">Phone</div>
                        <div class="v">
                            <%= m.phone %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">Message</div>
                        <div class="v">
                            <pre><%= m.message %></pre>
                        </div>
                    </div>
                    <div class="row">
                        <div class="k">ID</div>
                        <div class="v">
                            <%= m.id %>
                        </div>
                    </div>
                    <div class="row">
                        <form method="POST" action="/api/delete" onsubmit="return confirm('Delete this message?')">
                            <input type="hidden" name="key" value="<%= m.key %>" />
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </div>
                </div>
                <% }) %>
</body>

</html>